/* 1：电影背景图片 虚化效果*/
.detail-container{
  height: 400rpx;  /*图片高度*/
  filter: blur(40rpx); /*模糊滤镜*/
  opacity:0.9;  /*透明度*/
}
/* 2：遮罩层 */
.detail-mask{
  width: 100%;  /*宽高*/
  height: 400rpx;
  background: #666; /*深色背景*/
  position: absolute;  /*绝对定位*/
  top:0;
  left:0;
  z-index: -1;/*显示底层*/
}
/* 3：电影的详细信息 */
.detail-info{
  width: 100%;

  height: 400rpx;
  padding: 20rpx;
  position:absolute;
  display: flex;
  top:0;
  left:0;
}
/* 4：右侧大图*/
.detail-img{
  width: 280rpx; /*大图宽度*/
  height:90%;  /*大图高度*/
  margin-right:24rpx; /*与右侧文字间距*/
}
/* 5：右侧区域 */
.datail{
  flex-grow: 1;/*文字占满剩余的空间*/
  line-height: 60rpx;  /*行高*/
  color:#fff;
  font-size: 24rpx;
}
/* 6：评分样式*/
.detail-sc{
  color:#fc0;
  font-size: 36rpx;
}
/* 7：电影描述*/
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color:#555;
}
/* 8：图片预览 */
